<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">

    <!-- Party -->
    <entity entity-name="Party" package="party.package">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="partyTypeId" type="id"/>
        <relationship type="one-nofk" related="party.package.Person"/>
        <relationship type="one-nofk" related="party.package.Organization"/>
        <relationship type="one" related="moqui.basic.Enumeration">
            <key-map field-name="partyTypeId" />
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="Party Type" enumTypeId="PartyType"/>
            <moqui.basic.Enumeration description="Person" enumId="Person" enumTypeId="PartyType"/>
            <moqui.basic.Enumeration description="Organization" enumId="Organization" enumTypeId="PartyType"/>
        </seed-data>
    </entity>

    <!-- Person -->
    <entity entity-name="Person" package="party.package">
        <field name="partyId" type="id" is-pk="true" not-null="true"/>
        <field name="firstName" type="text-medium" not-null="true"/>
        <field name="lastName" type="text-medium"/>
        <field name="dateOfBirth" type="date" not-null="true"/>
        <relationship type="one" related="party.package.Party">
            <key-map field-name="partyId" related="partyId"/>
        </relationship>
    </entity>

    <!-- Organization -->
    <entity entity-name="Organization" package="party.package">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="organizationName" type="text-medium" not-null="true"/>
        <relationship type="one" related="party.package.Party">
            <key-map field-name="partyId" related="partyId"/>
        </relationship>
    </entity>

    <!-- PartyRole -->
    <entity entity-name="PartyRole" package="party.package">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="roleTypeId" type="id" is-pk="true"/>
        <relationship type="many" related="party.package.Party">
            <key-map field-name="partyId" related="partyId"/>
        </relationship>
        <relationship type="one" related="moqui.basic.Enumeration">
            <key-map field-name="roleTypeId" related="enumId"/>
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="Role Type" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Customer" enumId="Customer" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Agent" enumId="Agent" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Distributor" enumId="Distributor" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Supplier" enumId="Supplier" enumTypeId="RoleType"/>
            <moqui.basic.Enumeration description="Contractor" enumId="Contractor" enumTypeId="RoleType"/>
        </seed-data>
    </entity>

    <!-- ContactMech -->
    <entity entity-name="ContactMech" package="party.package">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="contactMechEnumeration" type="id"/>
        <relationship type="one" related="moqui.basic.Enumeration">
            <key-map field-name="contactMechEnumeration" related="enumId"/>
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="ContactMechType" enumTypeId="contactType"/>
            <moqui.basic.Enumeration description="EMAIL" enumId="EMAIL" enumTypeId="contactType"/>
            <moqui.basic.Enumeration description="POSTAL" enumId="POSTAL" enumTypeId="contactType"/>
            <moqui.basic.Enumeration description="TELECOM" enumId="TELECOM" enumTypeId="contactType"/>
        </seed-data>
    </entity>

    <!-- PartyContactMech -->
    <entity entity-name="PartyContactMech" package="party.package">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="contactMechPurposeId" type="text-medium"/>
        <field name="fromDate" type="date"/>
        <field name="thruDate" type="date"/>
        
        <relationship type="one" related="party.package.Party">
            <key-map field-name="partyId" related="partyId"/>
        </relationship>

        <relationship type="one" related="party.package.ContactMech">
            <key-map field-name="contactMechId" related="contactMechId"/>
        </relationship>

        <relationship type="one" related="moqui.basic.Enumeration">
            <key-map field-name="contactMechPurposeId" related="enumId"/>
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="PurposeType" enumTypeId="PurposeType"/>
            <moqui.basic.Enumeration description="HOME" enumId="HOME" enumTypeId="PurposeType"/>
            <moqui.basic.Enumeration description="WORK" enumId="WORK" enumTypeId="PurposeType"/>
            <moqui.basic.Enumeration description="OFFICE" enumId="OFFICE" enumTypeId="PurposeType"/>
        </seed-data>
    </entity>

    <!-- PostalAddress -->
    <entity entity-name="PostalAddress" package="party.package">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="address1" type="text-long" not-null="true"/>
        <field name="address2" type="text-long"/>
        <field name="city" type="text-short" not-null="true"/>
        <field name="postalCode" type="text-short" not-null="true"/>
        <relationship type="one" related="party.package.ContactMech">
            <key-map field-name="contactMechId" related="contactMechId"/>
        </relationship>
    </entity>

    <!-- TelecomNumber -->
    <entity entity-name="TelecomNumber" package="party.package">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="countryCode" type="text-short"/>
        <field name="areaCode" type="text-short"/>
        <field name="contactNumber" type="text-short" not-null="true"/>
        <relationship type="one" related="party.package.ContactMech">
            <key-map field-name="contactMechId" related="contactMechId"/>
        </relationship>
    </entity>

    <!-- EmailAddress -->
    <entity entity-name="EmailAddress" package="party.package">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="emailAddress" type="text-short" not-null="true"/>
        <relationship type="one" related="party.package.ContactMech">
            <key-map field-name="contactMechId" related="contactMechId"/>
        </relationship>
    </entity>

</entities>
